{% extends "template/dashboardTheme.html.twig" %}

{% block title %}Listes commandes{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('frontend/css/resto-cmd.css') }}">
    <link rel="stylesheet" href="{{ asset('frontend/dashboard/assets/css/flag-icon.min.css') }}">
    <link rel="stylesheet" href="{{ asset('frontend/externres/node_modules/@material/typography/dist/mdc.typography.css') }}">
    <link rel="stylesheet" href="{{ asset('frontend/externres/node_modules/@material/card/dist/mdc.card.css') }}">
    <link rel="stylesheet" href="{{ asset('frontend/externres/node_modules/@material/button/dist/mdc.button.css') }}">
    <link rel="stylesheet" href="{{ asset('frontend/externres/node_modules/@material/dialog/dist/mdc.dialog.css') }}">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>



{% endblock %}

{% block rightside %}
    {% include 'template/dashboardheader.html.twig' %}
    <div class="container t" style="width:100%;overflow-y: auto;overflow-x: hidden;height : 89%;">
        <div class="row cmd-title-bar">
            <div class="block-review-title ">
                <span class="mdc-typography--headline5 cmd-title-text ">Les commandes</span><div class="nbrcmd rounded-circle">10</div>
            </div>
            <div class="block-tri   ">
                <span class="mdc-typography--subtitle1">Trier Par:</span>
                <select class="tri-dropdown">
                    <option class="mdc-typography--subtitle1">les commandes consulte</option>
                    <option>les commandes non consulte</option>
                    <option>les commandes en cours</option>
                    <option>les dernier commades</option>
                    <option>les anciens avis</option>
                </select>
            </div>

        </div>
        <div class="row">
            {% for i in 1..5 %}
            <div class="mdc-card col-md-5  commande-card">
                <div class="row cmd-title"><span class="cmd-text-title mdc-typography--headline6">Commande Num 12345 </span></div>
                <div class="block-cmd-content">
                    <div class="cmd-item"><span class="mdc-typography--subtitle1 font-weight-bold">Nom Client :</span><span class="mdc-typography--subtitle2 cmd-text"> Youssef Jaouadi</span></div>
                    <div class="cmd-item"><span class="mdc-typography--subtitle1 font-weight-bold">Date :</span><span class="mdc-typography--subtitle2 cmd-text"> 19/05/2018 16:33</span></div>
                    <div class="cmd-item"><span class="mdc-typography--subtitle1 font-weight-bold">Slot :</span><span class="mdc-typography--subtitle2 cmd-text"> 19/05/2018 17:00</span></div>
                    <div class="cmd-item"><span class="mdc-typography--subtitle1 font-weight-bold">listes Produit :</span><span class="mdc-typography--subtitle2 cmd-text"> [pizza 5],[Sandwitch 3],[Boissons gazeux 1],[pizza 5],[Sandwitch 3],[Boissons gazeux 1],</span></div>
                    <div class="cmd-item"><span class="mdc-typography--subtitle1 font-weight-bold" >Etat :</span><span id="cmd-state" class="cmdresult mdc-typography--subtitle2 cmd-text nonecheckedstate">non confirmer</span></div>

                </div>
                <div class="row block-cmd-btns">
                    <button id="btn-accept" class="accept-btn"><i class="fa fa-check"></i><span>Accepter</span></button>
                    <button id="btn-refuse" class="refuse-btn"><i class="fa fa-close"></i><span>Refuser</span></button>
                    <button id="btn-ready" class="ready-btn"><i class="fa fa-clock-o"></i><span>Commande pret</span></button>
                    <button id="btn-wait" class="wait-btn"><i class="fa fa-spinner fa-pulse"></i><span>Commande En attente</span></button>
                    <button id="btn-livred" class="livred-btn"><i class="fa fa-check"></i><span>Commande livré</span></button>
                </div>
            </div>
            {% endfor %}
            <div class="mdc-card col-md-5  commande-card">
                <div class="row cmd-title"><span class="cmd-text-title mdc-typography--headline6">Commande Num 12345 </span></div>
                <div class="block-cmd-content">
                    <div class="cmd-item"><span class="mdc-typography--subtitle1 font-weight-bold">Nom Client :</span><span class="mdc-typography--subtitle2 cmd-text"> Youssef Jaouadi</span></div>
                    <div class="cmd-item"><span class="mdc-typography--subtitle1 font-weight-bold">Date :</span><span class="mdc-typography--subtitle2 cmd-text"> 19/05/2018 16:33</span></div>
                    <div class="cmd-item"><span class="mdc-typography--subtitle1 font-weight-bold">Slot :</span><span class="mdc-typography--subtitle2 cmd-text"> 19/05/2018 17:00</span></div>
                    <div class="cmd-item"><span class="mdc-typography--subtitle1 font-weight-bold">listes Produit :</span><span class="mdc-typography--subtitle2 cmd-text"> [pizza 5],[Sandwitch 3],[Boissons gazeux 1],[pizza 5],[Sandwitch 3],[Boissons gazeux 1],[pizza 5],[Sandwitch 3],[Boissons gazeux 1],[pizza 5],[Sandwitch 3],[Boissons gazeux 1],[pizza 5],[Sandwitch 3],[Boissons gazeux 1],[pizza 5],[Sandwitch 3],[Boissons gazeux 1],[pizza 5],[Sandwitch 3],[Boissons gazeux 1],[pizza 5],[Sandwitch 3],[Boissons gazeux 1],</span></div>
                    <div class="cmd-item"><span class="mdc-typography--subtitle1 font-weight-bold" >Etat :</span><span id="cmd-state" class="cmdresult mdc-typography--subtitle2 cmd-text delvredstate">Commande livré</span></div>

                </div>
                <div class="row block-cmd-btns">
                    <button id="btn-accept" class="accept-btn" style="display: none"><i class="fa fa-check"></i><span>Accepter</span></button>
                    <button id="btn-refuse" class="refuse-btn"style="display: none"><i class="fa fa-close"></i><span>Refuser</span></button>
                    <button id="btn-ready" class="ready-btn"style="display: none"><i class="fa fa-clock-o"></i><span>Commande pret</span></button>
                    <button id="btn-wait" class="wait-btn"style="display: none"><i class="fa fa-spinner fa-pulse"></i><span>Commande En attente</span></button>
                    <button id="btn-livred" class="livred-btn" style="display: block"><i class="fa fa-check"></i><span>Commande livré</span></button>
                </div>
            </div>

        </div>
        <aside id="my-mdc-dialog"
               class="mdc-dialog "
               role="alertdialog"
               aria-labelledby="my-mdc-dialog-label"
               aria-describedby="my-mdc-dialog-description">
            <div class="mdc-dialog__surface refuse-cmd-dialog">
                <header class="mdc-dialog__header">
                    <h2 id="my-mdc-dialog-label" class="mdc-dialog__header__title">
                        Vou voulez vraiment Refuser la Commande?
                    </h2>
                </header>
                {#   <section id="my-mdc-dialog-description" class="mdc-dialog__body">
                       Let Google help apps determine location. This means sending anonymous location data to Google, even when no apps are running.
                   </section>#}
                <footer class="mdc-dialog__footer">
                    <button type="button" class="mdc-button mdc-dialog__footer__button mdc-dialog__footer__button--cancel back-btn">Retour</button>
                    <button type="button" class="mdc-button mdc-dialog__footer__button mdc-dialog__footer__button--accept del-btn ">Confirmer</button>
                </footer>
            </div>
            <div class="mdc-dialog__backdrop"></div>
        </aside>


    </div>



{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('frontend/externres/node_modules/@material/dialog/dist/mdc.dialog.js') }}" type="text/javascript"></script>
    <script src="{{ asset('frontend/js/commander.js') }}"></script>

{% endblock %}